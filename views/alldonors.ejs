    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            table,
            td,
            th {
                border: 1px solid black;
                text-align: left;
            }
            
            table {
                border-collapse: collapse;
                width: 50%;
            }
            
            .table-data {
                position: relative;
                left: 150px;
                top: 100px;
            }
            
            th,
            td {
                padding: 15px;
            }
        </style>
    </head>

    <body>
        <div class="table-data">

            <h2>OUR DONORS</h2>
            <br>
            <table border="1">
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Phone</th>
                    <th>age</th>
                    <th>GENDER</th>
                    <th>blood group</th>
                    <th>location</th>
                </tr>

                <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
                    <tr>
                        <td>
                            <%=i; %>
                        </td>
                        <td>
                            <%=data.name %>
                        </td>
                        <td>
                            <%=data.email%>
                        </td>
                        <td>
                            <%=data.PHONE %>
                        </td>
                        <td>
                            <%=data.age %>
                        </td>
                        <td>
                            <%=data.GENDER %>
                        </td>
                        <td>
                            <%=data.bloodgroup %>
                        </td>
                        <td>
                            <%=data.location %>
                        </td>

                    </tr>
                    <%  i++; }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>
                            <% } %>
            </table>
        </div>
    </body>
</body>